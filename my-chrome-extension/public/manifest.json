{
  "manifest_version": 3,
  "name": "Chat Assistant Extension",
  "version": "1.0.0",
  "description": "A chat assistant that appears on any webpage",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Chat Assistant"
  }
}
